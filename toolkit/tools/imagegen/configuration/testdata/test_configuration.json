{
    "Disks": [
        {
            "PartitionTableType": "gpt",
            "MaxSize": 1024,
            "TargetDisk": {
                "Type": "path",
                "Value": "/dev/sda"
            },
            "Artifacts": [
                {
                    "Name": "CompressedVHD",
                    "Type": "vhd",
                    "Compression": "gz"
                },
                {
                    "Name": "UncompressedVHD",
                    "Type": "vhd"
                }
            ],
            "RawBinaries": [
                {
                    "BinPath": "binaries/1.bin",
                    "BlockSize": 1024,
                    "Seek": 1
