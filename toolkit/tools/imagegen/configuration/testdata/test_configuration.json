                    "ID": "MyRootfsA",
                    "Start": 9,
                    "End": 1024,
                    "FsType": "ext4",
                    "Flags": [
                        "dmroot"
                    ]
                },
                {
                    "ID": "MyBootB",
                    "Flags": [
                        "boot"
                    ],
                    "Start": 1024,
                    "FsType": "fat32"
                },
                {
                    "ID": "MyRootfsB",
                    "Start": 1033,
                    "End": 2048,
                    "FsType": "ext4",
                    "Flags": [
                        "dmroot"
                    ]
                },
                {
                    "ID": "SharedData",
                    "Start": 2048,
                    "End": 0,
                    "FsType": "ext4"
                }
            ]
        }
